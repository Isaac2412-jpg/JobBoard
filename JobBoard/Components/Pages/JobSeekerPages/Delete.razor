@page "/jobseekers/delete"
@using Microsoft.EntityFrameworkCore
@using JobBoard.Components.Domain
@inject IDbContextFactory<JobBoard.Data.JobBoardContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>JobSeeker</h2>
    <hr />
    @if (jobseeker is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@jobseeker.Name</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@jobseeker.Email</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">EducationLevel</dt>
            <dd class="col-sm-10">@jobseeker.EducationLevel</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ResumePath</dt>
            <dd class="col-sm-10">@jobseeker.ResumePath</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">LinkedInPath</dt>
            <dd class="col-sm-10">@jobseeker.LinkedInPath</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Experience</dt>
            <dd class="col-sm-10">@jobseeker.Experience</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">IdentityUserId</dt>
            <dd class="col-sm-10">@jobseeker.IdentityUserId</dd>
        </dl>
        <EditForm method="post" Model="jobseeker" OnValidSubmit="DeleteJobSeeker" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(jobseeker is null)">Delete</button> |
            <a href="/jobseekers">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private JobSeeker? jobseeker;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        jobseeker = await context.JobSeeker.FirstOrDefaultAsync(m => m.Id == Id);

        if (jobseeker is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteJobSeeker()
    {
        using var context = DbFactory.CreateDbContext();
        context.JobSeeker.Remove(jobseeker!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/jobseekers");
    }
}
