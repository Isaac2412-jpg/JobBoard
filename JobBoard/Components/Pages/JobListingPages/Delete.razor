@page "/joblistings/delete"
@using Microsoft.EntityFrameworkCore
@using JobBoard.Components.Domain
@inject IDbContextFactory<JobBoard.Data.JobBoardContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>JobListing</h2>
    <hr />
    @if (joblisting is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Title</dt>
            <dd class="col-sm-10">@joblisting.Title</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">JobType</dt>
            <dd class="col-sm-10">@joblisting.JobType</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Industry</dt>
            <dd class="col-sm-10">@joblisting.Industry</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Salary</dt>
            <dd class="col-sm-10">@joblisting.Salary</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Location</dt>
            <dd class="col-sm-10">@joblisting.Location</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@joblisting.Description</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Requirements</dt>
            <dd class="col-sm-10">@joblisting.Requirements</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DatePosted</dt>
            <dd class="col-sm-10">@joblisting.DatePosted</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">EmployerId</dt>
            <dd class="col-sm-10">@joblisting.EmployerId</dd>
        </dl>
        <EditForm method="post" Model="joblisting" OnValidSubmit="DeleteJobListing" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(joblisting is null)">Delete</button> |
            <a href="/joblistings">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private JobListing? joblisting;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        joblisting = await context.JobListing.FirstOrDefaultAsync(m => m.Id == Id);

        if (joblisting is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteJobListing()
    {
        using var context = DbFactory.CreateDbContext();
        context.JobListing.Remove(joblisting!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/joblistings");
    }
}
